<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Contatos</h1>
      <p class="text-center lead">Crie ou edite seu contato abaixo.</p>

      <%- include('includes/messages') %>

      <form action="/contato/register" method="POST">
        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
        
        <div class="mb-3">
          <label for="exampleInputNome1" class="form-label">Nome</label>
          <input value="<%= contato.nome %>" type="text" name="nome" class="form-control" id="exampleInputnome1" aria-describedby="emailHelp">
        </div>

        <div class="mb-3">
          <label for="exampleInputSobrenome1" class="form-label">Sobrenome</label>
          <input value="<%= contato.sobrenome %>" type="text" name="sobrenome" class="form-control" id="exampleInputsobrenome1" aria-describedby="emailHelp">
        </div>

        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Email</label>
          <input value="<%= contato.email %>" type="email" name="email" class="form-control" id="exampleInputemail1" aria-describedby="emailHelp">
        </div>

        <div class="mb-3">
          <label for="exampleInputTelefone1" class="form-label">Telefone</label>
          <input value="<%= contato.telefone %>" type="tel" name="telefone" class="form-control" id="exampleInputtelefone1" aria-describedby="emailHelp">
        </div>

        <button type="submit" class="btn btn-primary">Salvar</button>
      </form>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
